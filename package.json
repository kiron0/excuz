{
  "name": "excuz",
  "version": "1.0.2",
  "description": "A CLI and library that returns random humorous developer excuses in multiple languages",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "excuz": "./dist/cli.js"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "build": "tsup"
  },
  "keywords": [
    "excuse",
    "developer",
    "humor",
    "cli",
    "library",
    "random",
    "bengali",
    "english"
  ],
  "author": "Toufiq Hasan Kiron <hello@kiron.dev>",
  "license": "MIT",
  "files": [
    "dist",
    "data"
  ],
  "devDependencies": {
    "@types/node": "^25.0.3",
    "terser": "^5.44.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.2"
  }
}
